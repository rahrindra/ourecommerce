{% trans_default_domain 'FOSUserBundle' %}

<div class="panel-body">
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    <fieldset>
    <div class="form-group">
        <input  class="form-control" placeholder="Nouveau mot de passe" type="text" id="fos_user_resetting_form_plainPassword_first" name="fos_user_resetting_form[plainPassword][first]" required="required" />
    </div>
    <div class="form-group">
        <input  class="form-control" placeholder="Répéter le nouveau mot de passe" type="text" id="fos_user_resetting_form_plainPassword_second" name="fos_user_resetting_form[plainPassword][second]" required="required" />
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Modifier le mot de passe" />
    </div>
    </fieldset>
</form>
</div>