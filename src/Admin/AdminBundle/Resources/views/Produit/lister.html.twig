{% extends "AdminAdminBundle::layout.html.twig" %}

{% block title %}
    Liste des Produits
{% endblock %}

{% block theblog_body %}
    <br>
<div class="col-md-12">

    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Liste des Produits</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <a href="{{ path('admin_admin_ajouter_produit') }}" class="btn btn-sm btn-primary btn-create">Ajouter</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                <tr>
                    <th><em class="fa fa-cog"></em></th>
                    <th class="hidden-xs">ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th>Actif</th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                <tr>
                        <td align="center">
                            <a href="{{ path('admin_admin_modifier_produit', {'id': produit.id}) }}" class="btn btn-default" data-toggle="tooltip" title="modifier"><em class="fa fa-pencil"></em></a>
                            <a href="{{ path('admin_admin_supprimer_produit', {'id': produit.id}) }}" class="btn btn-danger" data-toggle="tooltip" title="supprimer"><em class="fa fa-trash"></em></a>
                        </td>
                        <td class="hidden-xs">{{ produit.id }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.prix }}</td>
                        <td>{{ produit.description }}</td>
                        <td align="center">
                            {% if produit.actif %}
                                <a class="btn btn-default" data-toggle="tooltip" title="desactiver"><em class="fa fa-check-square"></em></a>
                            {% else %}
                                <a class="btn btn-default" data-toggle="tooltip" title="activer"><em class="fa fa-minus"></em></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col col-xs-4">Page 1 of 5
                </div>
                <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                    </ul>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock theblog_body %}